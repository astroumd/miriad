#!/bin/csh -f

set base=carmacookbook

set out = `pwd`/$base

rm -rf $out
if ( ! -d $out ) mkdir $out

echo "**************** Generating the .ps files of the figures"
#Buildfigs

Buildtitlepage 

echo "**************** Making sure the .aux file is up-to-date"
latex $base.tex
latex $base.tex

# Convert the users' guide into html form. Exit if it fails.
echo "***************** Doing the real work"

set date = (`date +"%d %h %Y"`)
set sign = "Last generated by teuben@astro.umd.edu on $date"
setenv TEMP /tmp
latex2html -init_file ./dot.latex2html-init -info 0 -t "CARMA cookbook" \
		-address "$sign"  $base.tex
if ( $status ) exit $status

exit 0

set mydate = (`date +"%d%h%Y"`)
echo "***************** install smauserhtml and smauguide.pdf"
echo -n "install smauserhtml smauguide.pdf?"
set ok = $<
if ( "$ok" == "y" ) then
echo 'scp over smaUguide'$mydate'.tar.gz  smauguide.pdf'
scp smaUguide$mydate.tar.gz smauguide.pdf \
	miriad@cfa0.cfa.harvard.edu:/data/www/projects/sma/miriad/manuals/
endif
#********************************************************************
# Tidy up
rm -rf *.dvi *.log
continue:
echo 'do install.csh'
ssh miriad@cfa0.cfa.harvard.edu
exit
