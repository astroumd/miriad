#! /bin/csh -f
#


set version=$MIR:t

echo Updating $MIR with UMD patches for version $version

cp MIRRC.local MIRSRC.local     $MIR
cp Makefile                     $MIRLIB
#cp mirlibs  mirsao mirtng       $MIRBIN
cp mirlibs                      $MIRBIN
cp mir.man                      $MIRBIN

cat MIRSRC.linux |\
  sed s,/appl/lai/miriad/mirdir,$MIRTEMP, |\
  sed s,yymmmdd,$version, >! $MIR/MIRSRC.linux

mkdir -p $MIR/local/install

if (0) then
  echo Keeping log in $MIR/tmp/mir.genman.log
  mir.genman -n >& $MIR/tmp/mir.genman.log
else
  echo Skipping mir.genman for now
endif


if (0) then
if (-e /usr/lib/libforms.so) then
   echo Compiling velplotc
   cd velplotc
   make clean velplotc >& /tmp/mir.velplotc.log
   mv velplotc $MIRBIN
   make clean
endif
endif
